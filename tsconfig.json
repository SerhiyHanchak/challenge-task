{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "dist/",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "sourceMap": true,
    "paths": {
      "@utils": [
        "utils"
      ]
    }
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "swagger.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
